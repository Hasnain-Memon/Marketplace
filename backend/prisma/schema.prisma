generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 Int                @id @default(autoincrement())
  username           String
  email              String             @unique
  password           String
  profile_img        String?
  created_at         DateTime           @default(now())
  products           Product[]
  reviews            Review[]
  orders             Order[]
}

model Product {
  id                 Int                @id @default(autoincrement())
  title              String             
  description        String
  images             String[]
  created_at         DateTime           @default(now())
  warehouse1         String
  warehouse2         String?
  warehouse3         String?
  owner              User               @relation(fields: [owner_id], references: [id])
  owner_id           Int
  reviews            Review[]
  category           category           @relation(fields: [category_id], references: [id])
  category_id        Int
}

model Review {
  id                 Int                @id @default(autoincrement())
  review_content     String
  created_at         DateTime           @default(now())
  product            Product            @relation(fields: [product_id], references: [id])
  product_id         Int
  reviewer           User               @relation(fields: [reviewer_id], references: [id])
  reviewer_id        Int
}

model category {
  id                 Int                @id @default(autoincrement())
  name               String
  product            Product[]
}

model Order {
  id                 Int                @id @default(autoincrement())
  full_name          String
  mobile_number      Int
  province           String
  city               String
  area               String
  address            String
  landmark           String?
  seller             User               @relation(fields: [seller_id], references: [id])
  seller_id          Int
}